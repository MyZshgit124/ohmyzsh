## Aliases for dnf - based on yum plugin


# Unprivileged

alias dnl="dnf list"
alias dnli="dnf list installed"
alias dns="dnf search"
alias dnp="dnf info"
alias dnc="dnf clean all"
alias dngl="dnf group list"


# Privileged
alias dni="sudo dnf install"
alias dnu="sudo dnf upgrade"
alias dnr="sudo dnf remove"
alias dngi="sudo dnf group install"
alias dngr="sudo dnf group remove"
alias dngu="sudo dnf group upgrade"
